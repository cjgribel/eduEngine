{
    "version": "2.0.0",
    "tasks": [
        // === CONFIGURE TASKS ===
        {
            "type": "shell",
            "label": "CMake Configure (Debug) (Default Generator)",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/Debug",
                "-DCMAKE_BUILD_TYPE=Debug"
            ]
        },
        {
            "type": "shell",
            "label": "CMake Configure (Release) (Default Generator)",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/Release",
                "-DCMAKE_BUILD_TYPE=Release"
            ]
        },
        {
            "type": "shell",
            "label": "CMake Configure (Debug) (Ninja)",
            "command": "cmake",
            "args": [
                "-G",
                "Ninja",
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/Debug",
                "-DCMAKE_BUILD_TYPE=Debug"
            ]
        },
        {
            "type": "shell",
            "label": "CMake Configure (Release) (Ninja)",
            "command": "cmake",
            "args": [
                "-G",
                "Ninja",
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/Release",
                "-DCMAKE_BUILD_TYPE=Release"
            ]
        },
        // === BUILD TASKS ===
        {
            "label": "CMake Build (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/Debug",
                "--config",
                "Debug" // Only needed for multi-config generators
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "CMake Build (Release)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/Release",
                "--config",
                "Release" // Only needed for multi-config generators
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        // === TEST TASKS ===
        {
            "label": "Run Tests (Debug)",
            "type": "shell",
            "command": "ctest --output-on-failure",
            "options": {
                "cwd": "${workspaceFolder}/Debug"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run Tests (Release)",
            "type": "shell",
            "command": "ctest --output-on-failure",
            "options": {
                "cwd": "${workspaceFolder}/Release"
            },
            "group": "test",
            "problemMatcher": []
        }
    ]
}